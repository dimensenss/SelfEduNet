@using SelfEduNet.Data.Enum
@model Step


<div class="row">
	@switch (@Model.StepType)
	{
		case StepType.Text:
			@await Html.PartialAsync("ViewLessonMode/_ViewTextStep")
			break;

		case StepType.Video:
			@await Html.PartialAsync("ViewLessonMode/_ViewVideoStep")
			break;

		case StepType.Test:
			@await Html.PartialAsync("ViewLessonMode/_ViewTestStep")
			break;
	}
</div>