@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Реєстрація";
}

<h1 id="external-login-title" class="my-5 text-center">
	Прив’яжіть свій акаунт @Model.ProviderDisplayName
</h1>


@* fix styles *@
<div class="row justify-content-center">
	<div class="col-md-6 col-lg-5">
		<p id="external-login-description" class="text-dark mb-4">
			Ви успішно автентифікувалися через <strong>@Model.ProviderDisplayName</strong>.<br />
			Будь ласка, введіть електронну пошту для цього сайту нижче та натисніть кнопку
			<strong>«Зареєструватися»</strong>, щоб завершити вхід.
		</p>
		<div class="card shadow-sm">
			<div class="card-body">
				<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

					<div class="mb-3">
						<label asp-for="Input.Email" class="form-label">Електронна пошта</label>
						<input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Введіть свою електронну пошту." />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<div class="d-flex justify-content-center">
						<button type="submit" class="button-3">
							Зареєструватися
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
