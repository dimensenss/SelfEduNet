@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Підтвердження через email";
}
<hr />

<div class="d-flex justify-content-center my-2">
    <div class="col-md-4">
        <form method="post">
	        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
	        <label asp-for="Input.Email" class="form-label"></label>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 button-3">Надіслати підтвердження</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
