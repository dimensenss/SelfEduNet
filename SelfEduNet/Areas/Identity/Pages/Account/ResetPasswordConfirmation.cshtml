@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Підтвердження скидання паролю";
}

<div class="row justify-content-center mt-30 mb-50">
	<div class="col-md-6 text-center">
		<h1>@ViewData["Title"]</h1>
		<p>
			Ваш пароль було скинуто. Будь-ласка <a asp-page="./Login" class="a-purple text-decoration-underline">натисніть сюди, щоб увійти</a>.
		</p>

	</div>
</div>
